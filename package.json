{
    "name": "auto-debug",
    "displayName": "Auto Debug",
    "description": "Automatically switches launch configuration based on a glob of your active file. Enabling context/language aware debugging.",
    "version": "1.0.1",
    "publisher": "DarrenLevine",
    "author": {
        "name": "Darren Levine",
        "email": "DarrenVLevine@gmail.com",
        "url": "https://github.com/DarrenLevine"
    },
    "license": "MIT",
    "keywords": [
        "auto",
        "debug",
        "launcher",
        "glob",
        "extension"
    ],
    "engines": {
        "vscode": "^1.56.0"
    },
    "icon": "images/auto_debug_icon.png",
    "categories": [
        "Debuggers",
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/DarrenLevine/vscode-auto-debug.git"
    },
    "bugs": {
        "url": "https://github.com/DarrenLevine/vscode-auto-debug/issues"
    },
    "activationEvents": [
        "onCommand:auto-debug.auto-debug",
        "onDebug"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "auto-debug.auto-debug",
                "title": "auto-debug"
            }
        ],
        "debuggers": [
            {
                "type": "auto-debug",
                "label": "Auto Debug",
                "program": "no program",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "map"
                        ],
                        "properties": {
                            "map": {
                                "type": "object",
                                "description": "dictionary: key (glob pattern) : value (launch name)",
                                "default": {
                                    "*.py": "Python: Current File"
                                }
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "auto",
                        "type": "auto-debug",
                        "request": "launch",
                        "map": {
                            "*.py": "Python: Current File"
                        }
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Auto Debug: Configuration",
                        "description": "Defines a key-value map to switch launch.json configurations based on active file glob.",
                        "body": {
                            "name": "auto",
                            "type": "auto-debug",
                            "request": "launch",
                            "map": {
                                "*.py": "Python: Current File"
                            }
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.56.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^10.0.0",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "ts-loader": "^8.0.14",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.4.0"
    }
}